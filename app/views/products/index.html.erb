<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <p>
      <%= link_to "Show", product %>
    </p>
    <%= button_to "Buy now!", checkout_create_path, params: {id: product.id},remote: true %>
    <hr>
  <% end %>
</div>

<%= link_to "New product", new_product_path %>
